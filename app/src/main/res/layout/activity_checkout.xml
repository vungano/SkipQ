<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText"
    tools:context=".CheckoutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100"
        android:orientation="horizontal"
        android:background="@color/white"
        >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background7"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="SkipQ Checkout"
                android:textColor="@color/white"
                android:id="@+id/cardLogoName"
                />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="42dp"
                    android:src="@drawable/chip"
                    android:layout_below="@id/cardLogoName"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="25dp"
                    android:id="@+id/cardChip"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cardChip"
                    android:text="Emmanuel T. Vungano"
                    android:textColor="@color/white"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="30dp"
                    android:textSize="16sp"
                    android:letterSpacing="0.15"
                    android:id="@+id/cardNumber"
                    />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/mastercard"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="5dp"
                    />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="245"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add a new payment method"
            android:layout_marginLeft="17dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:textColor="@color/primary_gray"
            />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="40dp"
                >
                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="55dp"
                    android:src="@drawable/ecocash"
                    />
                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="55dp"
                    android:src="@drawable/visa1"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Card/Phone Number"
                android:layout_marginLeft="17dp"
                android:textSize="14dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/primary_gray"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="17dp"
                android:textColor="@color/primary_gray"
                android:inputType="number"
                />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name of Account Holder"
            android:layout_marginLeft="17dp"
            android:textSize="14dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/primary_gray"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="17dp"
            android:textColor="@color/primary_gray"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingHorizontal="40dp"
            android:layout_marginTop="125dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Total"
                android:textColor="@color/primary_gray"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/primary_gray"
                android:textSize="16sp"
                android:textStyle="bold"
                android:id="@+id/cartTotalCheckout"
                />
        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="17dp"
            android:layout_marginTop="15dp"
            android:text="PAY NOW"
            android:id="@+id/payNow"
            />

    </LinearLayout>

</LinearLayout>